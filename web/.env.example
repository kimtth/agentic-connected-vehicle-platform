# Azure AD / Microsoft Entra ID Configuration
# Get these values from your Azure App Registration
REACT_APP_AZURE_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
REACT_APP_AZURE_TENANT_ID=yyyyyyyy-yyyy-yyyy-yyyy-yyyyyyyyyyyy

# Optional: Explicit redirect URI (defaults to current origin)
REACT_APP_AZURE_REDIRECT_URI=http://localhost:3000

# Backend API URL
REACT_APP_API_BASE_URL=http://localhost:8000

# Set NODE_ENV for development tools
NODE_ENV=development

# Enable React debugging
REACT_APP_DEBUG=true

# CORS settings
REACT_APP_ALLOW_CORS=true