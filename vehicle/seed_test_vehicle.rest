# Base URL
@host = http://localhost:8000
# Optional auth (uncomment header lines below if your API requires it)
@authToken = YOUR_TOKEN_HERE

# Bulk seed defaults
@vehicles = 5
@commandsPerVehicle = 7
@notificationsPerVehicle = 8
@servicesPerVehicle = 10
@statusesPerVehicle = 1

# Known and random vehicle IDs
@vehicleId = 8863ea11-175f-4a87-a48b-dc5c4a419c2e
@newVehicleId = {{$guid}}

###
# @name seedDefault
# Seed default test vehicle and status
POST {{host}}/api/dev/seed
Accept: application/json

###
# @name seedById
# Seed a specific vehicle by ID
POST {{host}}/api/dev/seed?vehicleId={{vehicleId}}
Accept: application/json

###
# @name seedRandomVehicle
# Seed a new random vehicle by generated GUID
POST {{host}}/api/dev/seed?vehicleId={{newVehicleId}}
Accept: application/json

###
# @name seedBulk
# Bulk seed multiple vehicles and related data
POST {{host}}/api/dev/seed/bulk
Content-Type: application/json
Accept: application/json

{
  "Vehicles": {{vehicles}},
  "CommandsPerVehicle": {{commandsPerVehicle}},
  "NotificationsPerVehicle": {{notificationsPerVehicle}},
  "ServicesPerVehicle": {{servicesPerVehicle}},
  "StatusesPerVehicle": {{statusesPerVehicle}}
}

###
# @name seedStatus
# Verify seed status
GET {{host}}/api/dev/seed/status
Accept: application/json

###
# Fetch ICE Token for Speech Avatar Service
###
@region = YOUR_REGION_HERE
@SPEECH_SERVICE_API_KEY = YOUR_API_KEY_HERE
GET https://{{region}}.tts.speech.microsoft.com/cognitiveservices/avatar/relay/token/v1
Accept: application/json
Ocp-Apim-Subscription-Key: {{SPEECH_SERVICE_API_KEY}}

